@model GerenciadorCondominiosBLL.Models.Veiculo

@{
    ViewData["Title"] = "Atualizar veículo" + Model.Nome;
}

<div class="collection with-header">
    <form asp-action="Edit">
        <div class="collection-header blue darken-3">
            <h6 class="white-text">Atualizar veículo @Model.Nome</h6>
        </div>

        <div class="collection-item">
            <div asp-validation-summary="ModelOnly" class="red-text text-darken-4"></div>
            <input type="hidden" asp-for="VeiculoId" />
            <input type="hidden" asp-for="UsuarioId" />

            <div class="row">
                <div class="input-field col s12">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="validate" id="nome" />
                    <span asp-validation-for="Nome" class="red-text text-darken-4"></span>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <label asp-for="Marca"></label>
                    <input asp-for="Marca" class="validate" id="marca" />
                    <span asp-validation-for="Marca" class="red-text text-darken-4"></span>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <label asp-for="Cor"></label>
                    <input asp-for="Cor" class="validate" id="cor" />
                    <span asp-validation-for="Cor" class="red-text text-darken-4"></span>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <label asp-for="Placa"></label>
                    <input asp-for="Placa" class="validate" id="placa" />
                    <span asp-validation-for="Placa" class="red-text text-darken-4"></span>
                </div>
            </div>

            <div class="collection-item">
                <button type="submit" class="btn-small blue darken-3">Atualizar</button> &emsp;
                <a asp-action="MinhasInformacoes" asp-controller="Usuarios">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
    <script src="~/js/IniciarMascaras.js"></script>

}
